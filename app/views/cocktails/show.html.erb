<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h2><%= @cocktail.name %></h2>
      <ul class="list-group">
      <% @cocktail.doses.each do |dose| %>
        <li class="list-group-item">
          <%= dose.description " of " @dose.ingredient %>
        </li>
      <% end %>
      </ul>
      <hr>
      <%= link_to "new dose", new_cocktail_dose_path(@cocktail), class: "btn btn-success" %>
      <hr>
      <%= link_to "back to list", cocktails_path, class: "btn btn-info" %>
    </div>
  </div>
</div>




<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h2><%= @cocktail.name %></h2>
      <ul class="list-group">
      <% @cocktail.doses.each do |dose| %>
        <li class="list-group-item">
          <%= dose.description + " of " +  dose.ingredient.name %>
          <%= link_to "delete", cocktail_dose_path(dose), method: :delete, data: { confirm: "Delete #{dose.description}?" } %>
        </li>
      <% end %>
      </ul>
      <hr>
      <%= link_to "Add dose", new_cocktail_dose_path(@cocktail), class: "btn btn-success" %>
      <hr>
      <%= link_to "Back to list", cocktails_path, class: "btn btn-info" %>
    </div>
  </div>
</div>




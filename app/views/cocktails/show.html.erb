<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(' <%= image_path("cocktail.jpg") %>');">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-10 col-sm-offset-1">
        <h2><%= @cocktail.name %></h2>
        <ul class="list-group">
        <% @cocktail.doses.each do |dose| %>
          <li class="list-group-item">
            <%= dose.description + " of " +  dose.ingredient.name %>
            <%= link_to "delete", dose_path(dose), method: :delete, data: { confirm: "Delete #{dose.description}?" } %>
          </li>
        <% end %>
        </ul>
        <hr>
        <%= link_to "Add dose", new_cocktail_dose_path(@cocktail), class: "btn btn-success" %>
      </div>
    </div>
  </div>
</div>

<div class="container">
<%= render 'shared/card', cocktail: @cocktail %>
</div>



